

<%= form_with(model: @blog, local: true, url: confirm_blogs_path) do |form| %>
    <div class="blog_title">
      <%= form.label :title %>
      <%= form.text_field :title %>
    </div>
    <div class="blog_content">
      <%= form.label :content %>
      <%= form.text_field :content %>
    </div>
    <div class="field">
    <%= form.label :image %>
    <%= form.file_field :image %>
  </div>
    <%= form.submit %>
  <% end %>

